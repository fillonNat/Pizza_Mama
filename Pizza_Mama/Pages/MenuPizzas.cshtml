@page
@model Pizza_Mama.Pages.MenuPizzasModel
@{
}

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pizza Mama - Menu</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body>
    <a asp-page="Index">
        <img class="smallLogo" src="images/small_logo.png" alt="Notre logo" />
    </a>
    <h1>Les pizzas</h1>
    <br />
    <div class="menu_list">
    @foreach (var item in Model.Pizza)
    {
        <div class="menu_item"><span class="menu_title">@item.nom </span>
                <span class="menu_prix">@String.Format("{0:0.00}", item.prix)$</span>
            <div class="menu_ingredient">@item.ingredients</div>
                @if(item.vegetarienne)
                {
                    <div class="badge">végétarienne</div>
                }
            </div>
    }

    </div>
</body>
</html>

